-- Находим это место в цикле while true do:
task.spawn(function()
	while true do
		-- === 1. ПЕРЕМЕНА ===
		currentTeacher = nil
		nextTeacherCandidate = nil
		teacherTopic = nil
		essays = {}
		scores = {}
		skipTimer = false
		
		-- !!! НОВОЕ: Возвращаем ВСЕХ (включая прошлого учителя) на обычные стулья
		for _, plr in pairs(Players:GetPlayers()) do
			_G.SeatPlayer(plr, false) -- false значит сажаем как ученика
		end

		for i = 15, 0, -1 do
			Events.TimeUpdate:FireAllClients(i, "Перемена")
			task.wait(1)
		end
        
        -- ... (дальше идет выбор учителя и раунд)
